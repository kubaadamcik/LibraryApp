<Window x:Class="ZaverecnyProjekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZaverecnyProjekt"
        mc:Ignorable="d" 
        Height="700" Width="600" WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="False"  Background="#FFEEEEEE">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="30" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#FFCCCCCC" Height="40" MouseLeftButtonDown="Window_MouseLeftButtonDown">
            <DockPanel>
                <TextBlock Text="📚 Knihovna"
                           FontSize="20"
                           FontWeight="DemiBold"
                           Foreground="Black"
                           VerticalAlignment="Center"/>
                <Button Content="X"
                        Width="40" Height="30"
                        DockPanel.Dock="Right"
                        Click="CloseApp_Click"
                        Background="Transparent"
                        Foreground="Black"
                        BorderThickness="0"
                        FontWeight="Bold"
                        FontSize="14"
                        Cursor="Hand"
                        Margin="0,5,5,5"
                        HorizontalAlignment="Right"/>
                <Button Content="—"
                        Width="40" Height="30"
                        DockPanel.Dock="Right"
                        Click="MinimalizeApp_Click"
                        Background="Transparent"
                        Foreground="Black"
                        BorderThickness="0"
                        FontWeight="Bold"
                        FontSize="14"
                        Cursor="Hand"
                        Margin="0,5,5,5"
                        HorizontalAlignment="Right"/>
            </DockPanel>
        </Border>
        
        <UniformGrid Rows="3" Columns="2" Margin="40" Grid.Row="1">
            <Button 
                    Content="Vypůjčit knihu"
                    FontFamily="Segoe UI"
                    FontSize="20"
                    FontWeight="DemiBold"
                    Padding="10,6"
                    Margin="10"
                    Background="White"
                    BorderBrush="#FFCCCCCC"
                    BorderThickness="1"
                    Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Content="Vrátit knihu"
                    FontFamily="Segoe UI"
                    FontSize="20"
                    FontWeight="DemiBold"
                    Padding="10,6"
                    Margin="10"
                    Background="White"
                    BorderBrush="#FFCCCCCC"
                    BorderThickness="1"
                    Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Content="Zobrazit knihy"
                    FontFamily="Segoe UI"
                    FontSize="20"
                    FontWeight="DemiBold"
                    Padding="10,6"
                    Margin="10"
                    Background="White"
                    BorderBrush="#FFCCCCCC"
                    BorderThickness="1"
                    Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Content="Registrovat uživatele"
                    FontFamily="Segoe UI"
                    FontSize="20"
                    FontWeight="DemiBold"
                    Padding="10,6"
                    Margin="10"
                    Background="White"
                    BorderBrush="#FFCCCCCC"
                    BorderThickness="1"
                    Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Content="Upravovení uživatelů"
                    FontFamily="Segoe UI"
                    FontSize="20"
                    FontWeight="DemiBold"
                    Padding="10,6"
                    Margin="10"
                    Background="White"
                    BorderBrush="#FFCCCCCC"
                    BorderThickness="1"
                    Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Content="Nastavení"
                    FontFamily="Segoe UI"
                    FontSize="20"
                    FontWeight="DemiBold"
                    Padding="10,6"
                    Margin="10"
                    Background="White"
                    BorderBrush="#FFCCCCCC"
                    BorderThickness="1"
                    Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </UniformGrid>
        
        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="2" HorizontalAlignment="Center">
            <Button Content="Správa výpůjček" FontSize="14" Margin="10"/>
            <Button Content="Nápověda" FontSize="14" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
