<Application x:Class="ZaverecnyProjekt.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Základní barvy (světlý režim) -->
            <SolidColorBrush x:Key="BackgroundBrush" Color="#DBDBDB"/> <!-- 219,219,219 -->
            <SolidColorBrush x:Key="ForegroundBrush" Color="#000000"/> <!-- 0,0,0 -->
            <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#D9D9D9"/> <!-- 217,217,217 -->
            <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#000000"/> <!-- 0,0,0 -->
            <SolidColorBrush x:Key="ButtonBorderBrush" Color="#999999"/> <!-- použil jsem šedou podobnou ForegroundColor -->
        
            <!-- Základní styl pro tlačítka -->
            <Style TargetType="Button">
                <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderBrush}"/>
                <Setter Property="Padding" Value="10,5"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>