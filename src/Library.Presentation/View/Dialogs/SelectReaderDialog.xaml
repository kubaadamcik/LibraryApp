<Window x:Class="ZaverecnyProjekt.View.Dialogs.SelectReaderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ZaverecnyProjekt.View.Dialogs"
        mc:Ignorable="d"
        Title="SelectUserDialog" Height="450" Width="450">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <ListBox x:Name="LbReaders"></ListBox>

        <Button Grid.Row="1" Grid.Column="1" Content="Vypůjčit" Click="BorrowBook"></Button>
    </Grid>
</Window>
