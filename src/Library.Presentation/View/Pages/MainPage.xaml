<Page x:Class="ZaverecnyProjekt.View.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ZaverecnyProjekt.View.Pages"
      mc:Ignorable="d"
      Title="MainPage" Background="#e0e0e0">
<Grid>
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock Text="Knihovna"
               FontSize="26"
               FontWeight="Bold"
               Margin="10"
               HorizontalAlignment="Center"
               Grid.Row="0"/>

    <UniformGrid Rows="2" Columns="3" Margin="20" Grid.Row="1">
    <Button Click="BorrowBook" Cursor="Hand" Margin="5" FontWeight="Medium">
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Border Background="White" 
                        CornerRadius="20" 
                        BorderBrush="Gray" 
                        BorderThickness="1" 
                        Padding="10">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Button.Template>
        <TextBlock Text="Vypůjčit knihu" FontSize="16"/>
    </Button>

    <Button Click="ReturnBook" Cursor="Hand" Margin="5" FontWeight="Medium">
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Border Background="White" 
                        CornerRadius="20" 
                        BorderBrush="Gray" 
                        BorderThickness="1" 
                        Padding="10">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Button.Template>
        <TextBlock Text="Vrátit knihu" FontSize="16"/>
    </Button>

    <Button Click="ShowBooks" Cursor="Hand" Margin="5" FontWeight="Medium">
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Border Background="White" 
                        CornerRadius="20" 
                        BorderBrush="Gray" 
                        BorderThickness="1" 
                        Padding="10">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Button.Template>
        <TextBlock Text="Zobrazit knihy" FontSize="16"/>
    </Button>

    <Button Click="ManageReaders" Cursor="Hand" Margin="5" FontWeight="Medium">
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Border Background="White" 
                        CornerRadius="20" 
                        BorderBrush="Gray" 
                        BorderThickness="1" 
                        Padding="10">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Button.Template>
        <TextBlock Text="Registrovat uživatele" FontSize="16"/>
    </Button>

    <Button Click="ManageUsers" Cursor="Hand" Margin="5" FontWeight="Medium">
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Border Background="White" 
                        CornerRadius="20" 
                        BorderBrush="Gray" 
                        BorderThickness="1" 
                        Padding="10">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Button.Template>
        <TextBlock Text="Spravovat uživatele" FontSize="16"/>
    </Button>

    <Button Click="ManageBorrows" Cursor="Hand" Margin="5" FontWeight="Medium">
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Border Background="White" 
                        CornerRadius="20" 
                        BorderBrush="Gray" 
                        BorderThickness="1" 
                        Padding="10">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Button.Template>
        <TextBlock Text="Spravovat knihy" FontSize="16"/>
    </Button>
</UniformGrid>


    <StackPanel Orientation="Horizontal" Margin="0 0 0 20" Grid.Row="2" HorizontalAlignment="Center">
        <Button Click="Settings" Cursor="Hand">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="#e0e0e0" 
                            BorderBrush="Gray" 
                            BorderThickness="0" 
                            Padding="5"
                            Margin="0 0 10 0">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <TextBlock Text="Nastavení" FontSize="16"/>
        </Button>
        
        <Button Click="About" Cursor="Hand">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="#e0e0e0" 
                            BorderBrush="Gray" 
                            BorderThickness="0" 
                            Padding="5"
                            Margin="10 0 0 0">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <TextBlock Text="Nápověda" FontSize="16"/>
        </Button>
    </StackPanel>
</Grid>
</Page>
