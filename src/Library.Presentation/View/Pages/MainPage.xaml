<Page x:Class="ZaverecnyProjekt.View.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ZaverecnyProjekt.View.Pages"
      mc:Ignorable="d"
      Title="MainPage" Background="#dbdbdb">

    <Page.Resources>
        <!-- Styl pro zaoblená tlačítka -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#b5b3b3"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Knihovna"
                   FontSize="26"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Grid.Row="0"/>

        <UniformGrid Rows="2" Columns="3" Margin="40" Grid.Row="1">
            <Button Content="Vypůjčit knihu" FontSize="16" Margin="10" Click="BorrowBook" Style="{StaticResource RoundedButtonStyle}"/>
            <Button Content="Vrátit knihu" FontSize="16" Margin="10" Click="ReturnBook" Style="{StaticResource RoundedButtonStyle}"/>
            <Button Content="Zobrazit knihy" FontSize="16" Margin="10" Click="ShowBooks" Style="{StaticResource RoundedButtonStyle}"/>
            <Button Content="Registrovat uživatele" FontSize="16" Margin="10" Click="ManageReaders" Style="{StaticResource RoundedButtonStyle}"/>
            <Button Content="Spravovat uživatele" FontSize="16" Margin="10" Click="ManageUsers" Style="{StaticResource RoundedButtonStyle}"/>
            <Button Content="Nastavení" FontSize="16" Margin="10" Click="Settings" Style="{StaticResource RoundedButtonStyle}"/>
        </UniformGrid>

        <StackPanel Orientation="Horizontal" Margin="20" Grid.Row="2" HorizontalAlignment="Center">
            <Button Content="Správa výpůjček" FontSize="14" Margin="10" BorderThickness="0" Cursor="Hand" Click="" Style="{StaticResource RoundedButtonStyle}/>
            <Button Content="Nápověda" FontSize="14" Margin="10" BorderThickness="0" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Page>
