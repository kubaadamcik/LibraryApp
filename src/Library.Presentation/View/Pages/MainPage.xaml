<Page x:Class="ZaverecnyProjekt.View.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ZaverecnyProjekt.View.Pages"
      mc:Ignorable="d"
      Title="MainPage" Height="800" Width="600">
<Grid>
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock Text="Knihovna"
               FontSize="26"
               FontWeight="Bold"
               Margin="10"
               HorizontalAlignment="Center"
               Grid.Row="0"/>

    <UniformGrid Rows="2" Columns="3" Margin="40" Grid.Row="1">
        <Button Content="Vypůjčit knihu" 
                FontSize="16" 
                Margin="10" 
                Click="BorrowBook" 
                Cursor="Hand"
                <Border Background="#e0e0e0" CornerRadius="5" BorderBrush="Gray" BorderThickness="1"/>
        
                
        <Button Content="Vrátit knihu" FontSize="16" Margin="10" Click="ReturnBook" Cursor="Hand"/>
        <Button Content="Zobrazit knihy" FontSize="16" Margin="10" Click="ShowBooks" Cursor="Hand"/>
        <Button Content="Registrovat uživatele" FontSize="16" Margin="10" Click="ManageReaders" Cursor="Hand"/>
        <Button Content="Spravovat uživatele" FontSize="16" Margin="10" Click="ManageUsers" Cursor="Hand"/>
        <Button Content="Nastavení" FontSize="16" Margin="10" Click="Settings" Cursor="Hand"/>
    </UniformGrid>

    <StackPanel Orientation="Horizontal" Margin="20" Grid.Row="2" HorizontalAlignment="Center">
        <Button Content="Správa výpůjček" FontSize="14" Margin="10"/>
        <Button Content="Nápověda" FontSize="14" Margin="10"/>
    </StackPanel>
</Grid>
</Page>
