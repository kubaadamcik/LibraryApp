<Page x:Class="ZaverecnyProjekt.View.Pages.ReaderManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ZaverecnyProjekt.View.Pages"
      mc:Ignorable="d"
      Title="ReaderManagement" Height="800" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Label HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20">Jméno čtenáře: </Label>
        <TextBox Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Height="30"
                 x:Name="TbReaderName" GotFocus="RemovePlaceholder"></TextBox>

        <Button Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"
                Padding="10" Content="Uložit čtenáře" Click="AddReader"></Button>

        <ListBox Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" x:Name="LbReaders" SelectionChanged="ShowReaderInfo"></ListBox>

        <ListView Grid.Column="3" Grid.Row="1" Grid.RowSpan="2" x:Name="LvReaderInfo"></ListView>
    </Grid>
</Page>
